<Window x:Class="Checkers.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Checkers"
        Height="600"
        Width="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="5">

            <!-- Имя игрока -->
            <StackPanel Margin="5" Width="130">
                <TextBlock RenderTransformOrigin="1.173,0.503"><Run Language="ru-ru" Text="  "/><Run Text="Имя"/></TextBlock>
                <TextBox x:Name="TbPlayerName"
                         Width="120"
                         Height="25"/>
            </StackPanel>

            <!-- ID игры -->
            <StackPanel Margin="5" Width="130">
                <TextBlock HorizontalAlignment="Left" Text="  ID игры"/>
                <TextBox x:Name="TbGameId"
                         Width="120"
                         Height="25"
                         Text="game1"/>
            </StackPanel>

            <!-- Кнопки -->
            <Button x:Name="BtnCreate"
                    Content="Создать"
                    Width="120"
                    Margin="5"
                    Click="BtnCreate_Click"/>

            <Button x:Name="BtnJoin"
                    Content="Присоединиться"
                    Width="120"
                    Margin="5"
                    Click="BtnJoin_Click"/>
        </StackPanel>

        <!-- Игровая доска -->
        <Grid x:Name="BoardGrid"
              Grid.Row="1"/>
    </Grid>
</Window>
