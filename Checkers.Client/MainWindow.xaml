<Window x:Class="Checkers.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Checkers" Height="600" Width="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button x:Name="BtnCreate" Content="Создать игру" Width="120" Margin="5" Click="BtnCreate_Click"/>
            <Button x:Name="BtnJoin" Content="Присоединиться" Width="120" Margin="5" Click="BtnJoin_Click"/>
            <TextBox x:Name="TbGameId" Width="100" Margin="5" Text="game1"/>
        </StackPanel>

        <Grid x:Name="BoardGrid" Grid.Row="1"/>
    </Grid>
</Window>
